<view class="address-detail">
  <view class="divider-line" />
  <view class="form-address">
    <form class="form-content">
      <t-cell-group>
        <t-cell class="form-cell" t-class-title="t-cell-title" title="游戏昵称" t-class-note="t-cell-note">
          <t-input class="t-input" slot="note" t-class="field-text" borderless data-item="gameName" maxlength="20" type="text" value="{{gameName}}" placeholder="请输入游戏昵称" bind:change="onInputValue" />
        </t-cell>
        <t-cell class="form-cell" t-class-title="t-cell-title" title="游戏内编号">
          <t-input slot="note" class="t-input" t-class="field-text" borderless type="text" value="{{gameId}}" maxlength="30" placeholder="选填，请输入游戏内编号" bind:change="onInputValue" data-item="gameId">
             <t-button slot="suffix" theme="light" size="extra-small" bind:tap="onPasteGameId">粘贴</t-button>
          </t-input>
        </t-cell>
        <t-cell class="form-cell" title="游戏端" note="{{platformText}}" t-class-title="t-cell-title" bind:tap="showPlatformPicker">
        </t-cell>
      </t-cell-group>
      <view class="submit">
        <t-button shape="round" block bind:tap="formSubmit">保存</t-button>
      </view>
    </form>
  </view>
</view>
<t-select-picker show="{{platformVisible}}" picker-options="{{platformOptions}}" title="请选择游戏端" value="{{platformValue}}" bind:confirm="onPlatformConfirm" bind:close="onPlatformClose" />
<t-toast id="t-toast" />
<loading-dialog show="{{loading}}" />