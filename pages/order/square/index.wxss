.square-container {
  padding: 24rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
}
.square-tabs {
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}
.order-list {
  display: flex;
  flex-direction: column;
}
.order-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  position: relative;
  overflow: hidden;
}
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.order-no {
  font-size: 26rpx;
  color: #999;
}
.card-body {
  margin-bottom: 32rpx;
}
.info-row {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  align-items: baseline;
}
.label {
  color: #888;
  width: 140rpx;
  flex-shrink: 0;
}
.value {
  color: #333;
  flex: 1;
  font-weight: 500;
}
.price-row {
  align-items: center;
}
.price {
  color: #fa4126;
  font-weight: bold;
  font-size: 36rpx;
}
.card-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 10rpx;
}
.empty-tip {
  text-align: center;
  color: #999;
  padding-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
}
